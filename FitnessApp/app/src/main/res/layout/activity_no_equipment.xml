<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:context=".NoEquipment">

        <Button
            android:id="@+id/button"
            android:layout_width="370dp"
            android:layout_height="85dp"
            android:background="@drawable/gradient"
            android:text="Lunges"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button3"
            android:layout_width="370dp"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient"
            android:text="Pushups"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <Button
            android:id="@+id/button4"
            android:layout_width="370dp"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient"
            android:text="SQUAT"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/button5"
            android:layout_width="370dp"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient"
            android:text="SUPERMAN PLANKS"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <Button
            android:id="@+id/button6"
            android:layout_width="370dp"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient"
            android:text="BURPEES"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

        <Button
            android:id="@+id/button7"
            android:layout_width="370dp"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient"
            android:text="JUMP ROPE"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button6" />

        <Button
            android:id="@+id/button8"
            android:layout_width="370dp"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient"
            android:text="HIGH KNEES"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button7" />

        <Button
            android:id="@+id/button9"
            android:layout_width="370dp"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient"
            android:text="DIVE BOMBER PUSHUPS"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button8" />

        <Button
            android:id="@+id/button10"
            android:layout_width="370dp"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient"
            android:text="MOUNTAIN CLIMBERS"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button9" />

        <Button
            android:id="@+id/button11"
            android:layout_width="370dp"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient"
            android:text="SHOULDER TAPS"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button10" />

        <Button
            android:id="@+id/button12"
            android:layout_width="370dp"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient"
            android:text="ELBOW TO KNEE"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button11" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>