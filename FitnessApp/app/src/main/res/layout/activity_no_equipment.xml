<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:context=".NoEquipment">

        <Button
            android:id="@+id/button"
            android:layout_width="370dp"
            android:layout_height="210dp"
            android:background="@drawable/lungess"
            android:fontFamily="sans-serif-black"
            android:soundEffectsEnabled="true"
            android:text="Lunges"
            android:textAlignment="center"
            android:textColor="#4267B2"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button3"
            android:layout_width="370dp"
            android:layout_height="210dp"
            android:background="@drawable/pushupss"
            android:fontFamily="sans-serif-black"
            android:soundEffectsEnabled="true"
            android:layout_marginTop="10dp"
            android:text="Push-ups"
            android:textAlignment="center"
            android:textColor="#4267B2"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <Button
            android:id="@+id/button4"
            android:layout_width="370dp"
            android:layout_height="210dp"
            android:background="@drawable/squats"
            android:fontFamily="sans-serif-black"
            android:soundEffectsEnabled="true"
            android:layout_marginTop="10dp"
            android:text="SQUAT"
            android:textAlignment="center"
            android:textColor="#4267B2"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/button5"
            android:layout_width="370dp"
            android:layout_height="210dp"
            android:background="@drawable/plankss"
            android:fontFamily="sans-serif-black"
            android:soundEffectsEnabled="true"
            android:layout_marginTop="10dp"
            android:text="SUPERMAN PLANKS"
            android:textAlignment="center"
            android:textColor="#4267B2"
            android:textSize="50sp"
            android:textColorHighlight="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <Button
            android:id="@+id/button6"
            android:layout_width="370dp"
            android:layout_height="210dp"
            android:background="@drawable/burfeess"
            android:fontFamily="sans-serif-black"
            android:soundEffectsEnabled="true"
            android:layout_marginTop="10dp"
            android:text="BURPEES"
            android:textAlignment="center"
            android:textColor="#4267B2"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

        <Button
            android:id="@+id/button7"
            android:layout_width="370dp"
            android:layout_height="210dp"
            android:background="@drawable/jump"
            android:fontFamily="sans-serif-black"
            android:soundEffectsEnabled="true"
            android:layout_marginTop="10dp"
            android:text="JUMPING \n JACK"
            android:textAlignment="center"
            android:textColor="#4267B2"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button6" />

        <Button
            android:id="@+id/button8"
            android:layout_width="370dp"
            android:layout_height="210dp"
            android:background="@drawable/highkneess"
            android:fontFamily="sans-serif-black"
            android:soundEffectsEnabled="true"
            android:layout_marginTop="10dp"
            android:text="HIGH KNEES"
            android:textAlignment="center"
            android:textColor="#4267B2"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button7" />

        <Button
            android:id="@+id/button9"
            android:layout_width="370dp"
            android:layout_height="210dp"
            android:background="@drawable/dives"
            android:fontFamily="sans-serif-black"
            android:soundEffectsEnabled="true"
            android:layout_marginTop="10dp"
            android:text="DIVE PUSHUPS"
            android:textAlignment="center"
            android:textColor="#4267B2"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button8" />

        <Button
            android:id="@+id/button10"
            android:layout_width="370dp"
            android:layout_height="210dp"
            android:background="@drawable/climbers"
            android:fontFamily="sans-serif-black"
            android:soundEffectsEnabled="true"
            android:layout_marginTop="10dp"
            android:text="MOUNTAIN CLIMBERS"
            android:textAlignment="center"
            android:textColor="#4267B2"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button9" />

        <Button
            android:id="@+id/button11"
            android:layout_width="370dp"
            android:layout_height="210dp"
            android:background="@drawable/shouldertap"
            android:fontFamily="sans-serif-black"
            android:soundEffectsEnabled="true"
            android:layout_marginTop="10dp"
            android:text="SHOULDER TAPS"
            android:textAlignment="center"
            android:textColor="#4267B2"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button10" />

        <Button
            android:id="@+id/button12"
            android:layout_width="370dp"
            android:layout_height="210dp"
            android:background="@drawable/cross"
            android:fontFamily="sans-serif-black"
            android:soundEffectsEnabled="true"
            android:layout_marginTop="10dp"
            android:text="Cross Crunches"
            android:textAlignment="center"
            android:textColor="#4267B2"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button11" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>